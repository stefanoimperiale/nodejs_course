extends layouts/main-layout

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://www.talkwalker.com/images/2020/blog-headers/image-analysis.png" alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about  even more
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products
